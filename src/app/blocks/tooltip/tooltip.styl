.tooltip
	size(225px, 130px)
	
	background-color #fff
	
	border-radius 3px
	
	border 1px solid #cfd3cb
	
	display none
	
	opacity 0

	position absolute
	top 69px
	right 95px
	
	z-index 3
	
	&:hover
		display block
		
		opacity 1
	
	&::before
		content ''
		
		size(10px, 10px)
		
		background-color #f4f8ef
		
		border-left solid 1px #dee2da
		border-top solid 1px #dee2da
		
		position absolute
		top -5px
		left 50%
		
		
		margin-left -8px
		
		transform rotate(45deg)
		
	&__header
		padding-all(12px, 13px)
	
		height 39px
		
		background-color #f4f8ef
		
		font-size 13px
		
		color #333
		
		display flex
		justify-content space-between
		
	&__body
		padding-all(12px, 14px)
	
		font-size 13px
		line-height 16px
		
		color #333333
		
	&__rating
		span
			font-weight 900
			
			color #79a847
		
	&__place
		color #79a847
