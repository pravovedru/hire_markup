.lawyer
    background #ffffff
    font-family "Arial", sans-serif
    display flex
    justify-content space-between
    align-items flex-start
    padding 20px 0 25px 25px
    width 960px
    height 200px
    &__info
        border-right 1px solid #eaeaea
        align-self stretch
        width 680px
        display flex
    &__ask
        flex 1
        align-self stretch
        width 255px
        display flex
        flex-direction column
        align-items center
        justify-content space-between
    &__content
        padding 0 90px 0 20px
        display flex
        flex-direction column
        justify-content space-between
    &__photo
        overflow hidden
        width 140px
        flex-shrink 0
    &__name
        font-size 24px
        line-height 20px
        margin 0 0 12px 0
        display block
    &__meta
        font-size 13px
        color #999999
    &__link
        color #2a599a
    &__text
        color #333333
    &__city
        margin 0 18px 0 0
    &__specializations
        margin 0 15px 0 0
    &__description
        font-size 14px
        line-height 20px
        margin 15px 0 0 0
        max-height 60px
        text-overflow ellipsis
        overflow hidden
    &__button-ask
        margin 0 0 12px 0
